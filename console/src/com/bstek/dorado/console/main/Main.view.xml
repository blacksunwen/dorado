<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model/>
  <View listener="spring:dorado.console.main#onViewInit">
    <Property name="title">Dorado X</Property>
    <Container layout="anchor">
      <Property name="height">42</Property>
      <Property name="width">100%</Property>
      <Property name="contentOverflow">hidden</Property>
      <Property name="style">
        <Property name="background-image">url(http://bsdn.org/projects/dorado7/deploy/sample-center/images/page-banner-bg.gif);</Property>
        <Property name="overflow">auto;
</Property>
      </Property>
      <Label layoutConstraint="left:20;top:10">
        <Property name="text">${res.addonName}</Property>
        <Property name="style">
          <Property name="color">#345666
</Property>
          <Property name="font-size">13pt</Property>
          <Property name="font-weight">bold</Property>
        </Property>
      </Label>
      <Label id="startupTime" layoutConstraint="bottom:2;right:100">
        <Property name="style">
          <Property name="color">gray</Property>
        </Property>
      </Label>
      <Label id="startupTimeLabel" layoutConstraint="bottom:2;right:210">
        <Property name="text">${res.startTime}</Property>
        <Property name="style">
          <Property name="color">gray</Property>
        </Property>
      </Label>
      <Button id="buttonLogout" layoutConstraint="right:20;top:10">
        <Property name="icon">url(>skin>common/icons.gif) -100px -20px</Property>
        <Property name="caption">${res.logout}</Property>
        <Property name="action">logoutAction</Property>
      </Button>
    </Container>
    <SplitPanel>
      <Property name="position">182</Property>
      <MainControl>
        <Panel id="framePanel">
          <Buttons/>
          <Children>
            <IFrame id="detailInfoSubView">
              <Property name="path">>com.bstek.dorado.console.runtime.SystemProperty.d</Property>
            </IFrame>
          </Children>
          <Tools/>
        </Panel>
      </MainControl>
      <SideControl>
        <Accordion>
          <Property name="width">180</Property>
          <Section>
            <Property name="caption">${res.DRE}</Property>
            <Property name="icon">url(>skin>common/icons.gif) 0px -20px</Property>
            <Container>
              <BlockView id="systemeBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">Parser Tree</Property>
            <Property name="icon">>dorado/console/images/xml_16.png</Property>
            <Container>
              <BlockView id="parserTreeBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">${res.systemLog}</Property>
            <Property name="icon">>dorado/console/images/log_16.png</Property>
            <Container>
              <BlockView id="logBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">${res.doradoObjects}</Property>
            <Property name="icon">>dorado/console/images/dorado_24.gif</Property>
            <Container>
              <BlockView id="commonBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">Web</Property>
            <Property name="icon">url(>skin>common/icons.gif) -100px -100px</Property>
            <Container>
              <BlockView id="webBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">${res.performanceMonit}</Property>
            <Property name="icon">url(>skin>common/icons.gif) -280px -40px</Property>
            <Container>
              <BlockView id="performanceBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">Addon</Property>
            <Property name="icon">url(>skin>common/icons.gif) -180px -40px</Property>
            <Container>
              <BlockView id="addonBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
          <Section>
            <Property name="caption">${res.others}</Property>
            <Property name="icon">>dorado/console/images/others.png</Property>
            <Container>
              <BlockView id="othersBlockView">
                <Property name="style">
                  <Property name="padding-left">30px</Property>
                </Property>
                <Property name="tags">menuBtn</Property>
              </BlockView>
            </Container>
          </Section>
        </Accordion>
      </SideControl>
    </SplitPanel>
    <AjaxAction id="logoutAction">
      <Property name="service">dorado.console.login#logout</Property>
      <Property name="confirmMessage">${res.logoutActionConfirmMessage}</Property>
    </AjaxAction>
  </View>
</ViewConfig>
