<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:d="http://www.bstek.com/dorado/schema" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.bstek.com/dorado/schema http://www.bstek.com/dorado/schema/spring-dorado-7.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
	<bean class="com.bstek.dorado.console.resolver.URLResolverMapping">
		<property name="order" value="1" />
		<property name="mappings">
			<props>
				<prop key="/console">dorado.console.accessPathResolver</prop>
			</props>
		</property>
	</bean>
	
	<bean id="dorado.console.accessPathResolver" class="com.bstek.dorado.console.resolver.AccessPathResolver" />
    
	<!-- View ResolverListener -->
	<bean parent="dorado.viewResolverListenerRegister">
		<property name="listener">
			<bean
				class="com.bstek.dorado.console.performance.listener.ViewResolverListener">
				<property name="viewNamePattern" value="*.dorado.console.*"></property>
				<property name="executeLogOutputter" ref="dorado.console.CreateViewLogOutputter"></property>
			</bean>
		</property>
	</bean>

	<!-- Dorado Console 页面访问安全拦截器 -->
	<mvc:interceptors>
		<bean class="com.bstek.dorado.console.security.HtmlViewSecurityInterceptor">
			<property name="interceptedNamePattern" value="*.dorado.console.*"></property>
		</bean>
	</mvc:interceptors>

	<!-- 资源文件URL映射 -->
	<bean parent="dorado.resolverRegister">
		<property name="url" value="/dorado/console" />
		<property name="resolver">
			<bean class="com.bstek.dorado.web.resolver.SimpleUrlResolver">
				<property name="url"
					value="forward:/com.bstek.dorado.console.main.Main.d" />
			</bean>
		</property>
	</bean>
	<bean parent="dorado.resolverRegister">
		<property name="order" value="41" />
		<property name="url" value="/dorado/console/scripts/**" />
		<property name="resolver">
			<bean class="com.bstek.dorado.web.resolver.WebFileResolver">
				<property name="baseUri" value="/dorado/console/scripts" />
				<property name="resourcePrefix" value="classpath:/dorado/console/scripts" />
			</bean>
		</property>
	</bean>
	<bean parent="dorado.resolverRegister">
		<property name="order" value="42" />
		<property name="url" value="/dorado/console/styles/**" />
		<property name="resolver">
			<bean class="com.bstek.dorado.web.resolver.WebFileResolver">
				<property name="baseUri" value="/dorado/console/styles" />
				<property name="resourcePrefix" value="classpath:/dorado/console/styles" />
			</bean>
		</property>
	</bean>
	<bean parent="dorado.resolverRegister">
		<property name="order" value="43" />
		<property name="url" value="/dorado/console/images/**" />
		<property name="resolver">
			<bean class="com.bstek.dorado.web.resolver.WebFileResolver">
				<property name="baseUri" value="/dorado/console/images" />
				<property name="resourcePrefix" value="classpath:/dorado/console/images" />
			</bean>
		</property>
	</bean>

</beans>
