	<target name="replace-revision">
		<replace dir="${dist}/scripts/dorado" token="%version%" value="${product.revision}" encoding="utf-8">
			<include name="core.js" />
		</replace>
	</target>

	<target name="copy-libs">
		<mkdir dir="${dist}/scripts/jquery" />
		<copy todir="${dist}/scripts/jquery">
			<fileset dir="${src}/scripts/jquery">
				<include name="jquery-1.4.2.js" />
				<include name="jquery-template-1.0.0.js" />
				<include name="jquery.easing.1.3.js" />
				<include name="jquery.mousewheel.js" />
				<include name="aop.js" />
				<include name="jquery.hotkeys.js" />
				<include name="jquery-ui-1.8.7.custom.js" />
				<include name="jquery.swfobject.1-1-1.js" />
			</fileset>
		</copy>

		<mkdir dir="${dist}/scripts/json" />
		<copy todir="${dist}/scripts/json">
			<fileset dir="${src}/scripts/json">
				<include name="json2.js" />
			</fileset>
		</copy>
	</target>

	<target name="copy-resources">
		<copy todir="${dist}/resources">
			<fileset dir="${src}/resources" />
		</copy>
	</target>

	<target name="build" depends="copy-skins,copy-js,replace-revision,copy-libs,copy-resources" />
