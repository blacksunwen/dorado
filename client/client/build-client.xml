				<file name="drag-drop/drag-drop.js" />
			</filelist>
		</concat>

		<concat destfile="${dist}/scripts/dorado/data.js" fixlastline="true" encoding="utf-8">
			<filelist dir="${src}/scripts/dorado/data">
				<file name="data-pipe.js" />
				<file name="data-provider.js" />
