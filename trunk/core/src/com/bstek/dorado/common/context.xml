<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:d="http://www.bstek.com/dorado/schema"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.bstek.com/dorado/schema http://www.bstek.com/dorado/schema/spring-dorado-7.0.xsd">
	<bean id="dorado.exposedServiceManager" class="com.bstek.dorado.common.service.ExposedServiceManager" />
	<bean id="dorado.exposedServiceRegister" abstract="true" class="com.bstek.dorado.common.service.ExposedServiceRegister">
		<property name="exposedServiceManager" ref="dorado.exposedServiceManager" />
	</bean>
	<bean id="dorado.exposedServiceAnnotationBeanPostProcessor" class="com.bstek.dorado.common.service.ExposedServiceAnnotationBeanPostProcessor">
		<property name="exposedServiceManager" ref="dorado.exposedServiceManager" />
	</bean>

	<bean id="clientEventConfigLoader" class="com.bstek.dorado.common.event.xml.ClientEventConfigLoader">
		<property name="configLocations">
			<list merge="true">
				<value>com/bstek/dorado/common/event/xml/client-events.xml</value>
			</list>
		</property>
		<property name="xmlDocumentBuilder" ref="dorado.xmlDocumentBuilder" />
		<property name="clientEventParser">
			<bean class="com.bstek.dorado.common.event.xml.ClientEventParser" />
		</property>
	</bean>

	<bean id="dorado.clientEventParser" class="com.bstek.dorado.common.event.ClientEventParser" parent="dorado.dispatchableXmlParser" />
	<bean id="dorado.collectionToPropertyParser" class="com.bstek.dorado.config.xml.CollectionToPropertyParser" parent="dorado.dispatchableXmlParser">
		<property name="xmlParserAnnotationHelper" ref="dorado.xmlParserAnnotationHelper" />
		<d:sub-parser key="ClientEvent" value-ref="dorado.ignoreParser" />
	</bean>
</beans>
