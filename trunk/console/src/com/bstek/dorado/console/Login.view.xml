<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model/>
  <View listener="spring:dorado.console.login#onViewInit">
    <Property name="title">Dorado Management Console</Property>
    <AjaxAction id="loginAction">
      <Property name="service">dorado.console.login#login</Property>
    </AjaxAction>
    <Dialog id="loginDialog" layout="anchor">
      <Property name="width">400</Property>
      <Property name="center">true</Property>
      <Property name="height">200</Property>
      <Property name="caption">${res.loginCaption}</Property>
      <Buttons>
        <Button>
          <Property name="caption">${res.buttonLogin}</Property>
          <Property name="action">loginAction</Property>
        </Button>
      </Buttons>
      <Children>
        <FormElement id="user_name" layoutConstraint="left:60;top:40">
          <Property name="label">${res.user_name}</Property>
          <Editor/>
        </FormElement>
        <FormElement id="user_password" layoutConstraint="left:60;top:10;anchorTop:previous">
          <Property name="label">${res.user_password}</Property>
          <Property name="editorType">PasswordEditor</Property>
          <Editor/>
        </FormElement>
      </Children>
      <Tools/>
    </Dialog>
  </View>
</ViewConfig>
