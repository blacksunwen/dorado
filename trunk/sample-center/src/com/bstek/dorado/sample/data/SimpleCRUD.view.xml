<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Model>
    <DataType name="ProductType" parent="Bean" meta="x:75;y:45" autoCreatePropertyDefs="true" matchType="com.bstek.dorado.sample.entity.Product">
      <Property name="creationType">com.bstek.dorado.sample.entity.Product</Property>
      <PropertyDef name="id" readOnly="true"/>
      <PropertyDef name="productName" required="true"/>
    </DataType>
  </Model>
  <View title="Product Maintain">
    <DataSet id="dsProducts" dataProvider="simpleCRUD#getAll" dataType="[ProductType]" pageSize="10">
      <Property name="readOnly">false</Property>
    </DataSet>
    <UpdateAction id="actionSave" caption="Save" successMessage="保存成功！" dataResolver="simpleCRUD#saveAll" icon="url(>skin>common/icons.gif) -140px -20px">
      <UpdateItem dataSet="dsProducts">
        <Property name="dataPath">!DIRTY_TREE</Property>
      </UpdateItem>
    </UpdateAction>
    <ToolBar layoutConstraint="top">
      <DataPilot dataSet="dsProducts" itemCodes="pages,|,+,-,x">
        <Property name="ignored">false</Property>
      </DataPilot>
      <Separator/>
      <ToolBarButton action="actionSave"/>
    </ToolBar>
    <DataGrid dataSet="dsProducts">
      <IndicatorColumn/>
    </DataGrid>
  </View>
</ViewConfig>
