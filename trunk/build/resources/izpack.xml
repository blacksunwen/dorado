<?xml version="1.0" encoding="UTF-8"?>
<installation version="1.0">
	<info>
		<appname>Dorado展现中间件</appname>
		<appversion>7.0</appversion>
		<appsubpath>Dorado7</appsubpath>
		<javaversion>1.5</javaversion>
		<url>http://www.bstek.com</url>
		<authors>
			<author name="BSTEK" email="dorado7@bstek.com" />
		</authors>
		<writeinstallationinformation>no</writeinstallationinformation>
		<webdir>ftp://bsdn.org/pub/projects/dorado7</webdir>
		<!-- pack200 / -->
	</info>

	<guiprefs width="640" height="480" resizable="yes">
		<laf name="kunststoff">
			<os family="windows" />
		</laf>
		<laf name="kunststoff">
			<os family="unix" />
		</laf>
		<laf name="kunststoff">
			<os family="mac" />
		</laf>

		<splash>.installer/images/splash.png</splash>

		<modifier key="useButtonIcons" value="yes" />
		<modifier key="useLabelIcons" value="no" />
		<modifier key="labelGap" value="2" />
		<modifier key="layoutAnchor" value="NORTH" />
		<modifier key="useHeadingPanel" value="yes" />
		<modifier key="headingLineCount" value="1" />
		<modifier key="headingFontSize" value="2" />
		<modifier key="headingBackgroundColor" value="0x00ffffff" />
		<modifier key="headingPanelCounter" value="text" />
		<modifier key="headingPanelCounterPos" value="inHeading" />
	</guiprefs>

	<locale>
		<langpack iso3="eng" />
	</locale>

	<variables>
		<variable name="FILE_SEPARATOR" value="/" />
		<variable name="DesktopShortcutCheckboxEnabled" value="true" />

		<variable name="CacheablePacker." value="/" />
	</variables>

	<resources>
		<res id="infoBannerPng" src=".installer/images/info-banner.png" />
		<res id="createSampleCenter1Png" src=".installer/images/create-sample-center1.png" />
		<res id="configServerRuntime1Png" src=".installer/images/config-server-runtime1.png" />
		<res id="configServerRuntime2Png" src=".installer/images/config-server-runtime2.png" />
		<res id="configServerRuntime3Png" src=".installer/images/config-server-runtime3.png" />
		<res id="configServerRuntime4Png" src=".installer/images/config-server-runtime4.png" />
		<res id="runSampleCenterPng" src=".installer/images/run-sample-center.png" />
		<res id="HTMLInfoPanel.beforeReadme" src=".installer/before-readme.html" />
		<res id="HTMLInfoPanel.postReadme" src=".installer/post-readme.html" />
		<res id="HTMLLicencePanel.licence" src=".installer/license.html" />
		<res id="TargetPanel.dir.windows" src=".installer/target-dir.txt" />
		<res id="Heading.image" src=".installer/images/dorado7-logo.png" />
		<res id="shortcutSpec.xml" src=".installer/default_shortcut_specification.xml" />
	</resources>

	<panels>
		<panel classname="HTMLInfoPanel" id="beforeReadme" />
		<panel classname="HTMLLicencePanel" />
		<panel classname="TargetPanel" />
		<panel classname="PacksPanel" />
		<panel classname="InstallPanel" />
		<panel classname="ShortcutPanel" />
		<panel classname="HTMLInfoPanel" id="postReadme" />
	</panels>

	<listeners>
		<!-- listener installer="Unpack200InstallerListener" / -->
	</listeners>

	<packs>
		<pack id="core.libraries" name="Dorado Core Libraries" required="no">
			<description>Dorado7 Core Libraries.</description>
			<fileset dir="." targetdir="$INSTALL_PATH">
				<include name="*.txt" />
				<include name="lib/dorado-core/**/*" />
			</fileset>
		</pack>

		<pack id="endorsed.libraries" name="Dorado Addon Libraries" required="no">
			<description>Dorado7 Addon libraries.</description>
			<depends packname="Dorado Core Libraries" />

			<fileset dir="." targetdir="$INSTALL_PATH">
				<include name="lib/**/*" />
				<exclude name="lib/dorado-core/**/*" />
			</fileset>
		</pack>

		<pack id="eclipse.plugins" name="Eclipse IDE Plugins" required="no">
			<description>Dorado7 Eclipse Plugins.</description>
			<fileset dir="eclipse" targetdir="$INSTALL_PATH/eclipse" defaultexcludes="yes">
				<include name="dropins/**/*" />
			</fileset>
		</pack>

		<pack id="eclipse.ide" name="Eclipse IDE (Recommended)" required="no">
			<description>Eclipse IDE for Java EE Developers (Eclipse Indigo).
			</description>
			<depends packname="Eclipse IDE Plugins" />
			<fileset dir="eclipse" targetdir="$INSTALL_PATH/eclipse">
				<exclude name="dropins/**/*" />
			</fileset>
		</pack>

		<pack id="documentations" name="Documentations" required="no">
			<description>Documentations.</description>
			<fileset dir="docs" targetdir="$INSTALL_PATH/docs" />
		</pack>

		<pack id="tomcat" name="Tomcat (Recommended)" required="no">
			<description><![CDATA[Apache Tomcat 7.0.20]]></description>
			<fileset dir="." targetdir="$INSTALL_PATH" defaultexcludes="yes">
				<include name="apache-tomcat-7.0.20/**/*" />
			</fileset>
		</pack>

		<pack id="dorado-updater" name="Dorado Updater (Recommended)" required="no">
			<description>A Tool for retrieving latest Dorado7 SNAPSHOT jars.</description>
			<fileset dir="dorado7-updater" targetdir="$INSTALL_PATH/dorado7-updater" />
		</pack>
	</packs>

	<jar src=".installer/eclipse-jarprocessor.jar" stage="install" />

	<!-- The native libraries to add. This is required for creating shortcuts on Windows -->
	<native type="izpack" name="ShellLink.dll" />
	<native type="izpack" name="ShellLink_x64.dll" />
</installation>