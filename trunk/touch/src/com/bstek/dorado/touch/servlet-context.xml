<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:d="http://www.bstek.com/dorado/schema"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.bstek.com/dorado/schema http://www.bstek.com/dorado/schema/spring-dorado-7.0.xsd">
	<bean id="dorado.viewResolverRegister" parent="dorado.resolverRegister">
		<property name="order" value="100" />
		<property name="url" value="**/*.d" />
		<property name="resolver" ref="dorado.dualPlatformViewResolver" />
	</bean>

	<bean id="dorado.dualPlatformViewResolver" class="com.bstek.dorado.touch.resolver.DualPlatformViewResolver">
		<property name="uriSuffix" value=".d" />
		<property name="viewResolverForPC">
			<bean class="com.bstek.dorado.view.resolver.HtmlViewResolver">
				<property name="templateFile" value="home:w3c-html4-template.html" />
				<property name="velocityHelper" ref="dorado.velocityHelper" />
			</bean>
		</property>
		<property name="viewResolverForTouch">
			<bean class="com.bstek.dorado.touch.resolver.HtmlViewResolver">
				<property name="templateFile" value="home:w3c-html5-template.html" />
				<property name="velocityHelper" ref="dorado.velocityHelper" />
			</bean>
		</property>
	</bean>
</beans>
