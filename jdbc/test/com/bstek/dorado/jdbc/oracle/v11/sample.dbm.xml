			<Column name="n_pid"        tableAlias="p" nativeColumnName="ID"                />
			<Column name="n_pname"      tableAlias="p" nativeColumnName="PRODUCT_NAME"      />
			<Column name="n_psupplier"  tableAlias="p" nativeColumnName="SUPPLIER_ID"       />
