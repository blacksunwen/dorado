{
  "rule" : "ViewConfig",
  "nodes" : [ {
    "rule" : "ViewConfig/Arguments",
    "nodes" : [ {
      "rule" : "ViewConfig/Arguments/Argument",
      "attrs" : {
        "name" : "layoutRegion",
        "value" : "background:#FDFEDA; border:1px #DBB74A solid; padding:4px; white-space:nowrap; overflow:visible"
      }
    } ]
  }, {
    "rule" : "DefaultView",
    "attrs" : {
      "title" : "AnchorLayout"
    },
    "layout" : {
      "type" : "Anchor"
    },
    "nodes" : [ {
      "rule" : "Button",
      "attrs" : {
        "caption" : "锚定式布局-场景1"
      },
      "position" : {
        "left" : "20",
        "top" : "20"
      },
      "events" : [ {
        "name" : "onClick",
        "signature" : "dialog1",
        "text" : "dialog1.show();\n"
      } ]
    }, {
      "rule" : "Button",
      "attrs" : {
        "caption" : "锚定式布局-场景2"
      },
      "position" : {
        "anchorTop" : "previous",
        "left" : "20",
        "top" : "4"
      },
      "events" : [ {
        "name" : "onClick",
        "signature" : "dialog2",
        "text" : "dialog2.show();\n"
      } ]
    }, {
      "rule" : "Button",
      "attrs" : {
        "caption" : "锚定式布局-场景3"
      },
      "position" : {
        "anchorTop" : "previous",
        "left" : "20",
        "top" : "4"
      },
      "events" : [ {
        "name" : "onClick",
        "signature" : "dialog3",
        "text" : "dialog3.show();\n"
      } ]
    }, {
      "rule" : "Button",
      "attrs" : {
        "caption" : "锚定式布局-场景4"
      },
      "position" : {
        "anchorTop" : "previous",
        "left" : "20",
        "top" : "4"
      },
      "events" : [ {
        "name" : "onClick",
        "signature" : "dialog4",
        "text" : "dialog4.show();\n"
      } ]
    }, {
      "rule" : "Dialog",
      "attrs" : {
        "id" : "dialog1",
        "caption" : "场景1",
        "center" : "true",
        "contentOverflow" : "hidden",
        "height" : "300",
        "maximizeable" : "true",
        "modal" : "true",
        "width" : "600"
      },
      "layout" : {
        "type" : "Anchor"
      },
      "nodes" : [ {
        "rule" : "Dialog/Wrapper.Children",
        "nodes" : [ {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "1) left:20; top:20",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "left" : "20",
            "top" : "20"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "2) left:10; top:20; anchorLeft:previous",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "anchorLeft" : "previous",
            "left" : "10",
            "top" : "20"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "3) right:20; bottom:20",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "bottom" : "20",
            "right" : "20"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "4) right:10; bottom:20; anchorRight:previous",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "bottom" : "20",
            "right" : "10",
            "anchorRight" : "previous"
          }
        } ]
      } ]
    }, {
      "rule" : "Dialog",
      "attrs" : {
        "id" : "dialog2",
        "caption" : "场景2",
        "center" : "true",
        "contentOverflow" : "hidden",
        "height" : "300",
        "maximizeable" : "true",
        "modal" : "true",
        "width" : "600"
      },
      "layout" : {
        "type" : "Anchor"
      },
      "nodes" : [ {
        "rule" : "Dialog/Wrapper.Buttons"
      }, {
        "rule" : "Dialog/Wrapper.Children",
        "nodes" : [ {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "1) left:10; top:10; right:10",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "left" : "10",
            "right" : "10",
            "top" : "10"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "2) left:10; top:10; right:10; bottom:10; anchorTop:previous",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "bottom" : "10",
            "anchorTop" : "previous",
            "left" : "10",
            "right" : "10",
            "top" : "10"
          }
        } ]
      }, {
        "rule" : "Dialog/Wrapper.Tools"
      } ]
    }, {
      "rule" : "Dialog",
      "attrs" : {
        "id" : "dialog3",
        "caption" : "场景3",
        "center" : "true",
        "contentOverflow" : "hidden",
        "height" : "300",
        "maximizeable" : "true",
        "modal" : "true",
        "width" : "600"
      },
      "layout" : {
        "type" : "Anchor"
      },
      "nodes" : [ {
        "rule" : "Dialog/Wrapper.Children",
        "nodes" : [ {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "1) left:50%; top:20",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "left" : "50%",
            "top" : "20"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "2) left:50%; top:50%; width:60%",
            "style" : "${argument.layoutRegion}",
            "width" : "60%"
          },
          "position" : {
            "width" : "60%",
            "left" : "50%",
            "top" : "50%"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "content" : "3) left:100%; bottom:20; width:300",
            "style" : "${argument.layoutRegion}"
          },
          "position" : {
            "width" : "300",
            "bottom" : "20",
            "left" : "100%"
          }
        } ]
      } ]
    }, {
      "rule" : "Dialog",
      "attrs" : {
        "id" : "dialog4",
        "center" : "true",
        "contentOverflow" : "hidden",
        "height" : "300",
        "maximizeable" : "true",
        "modal" : "true",
        "width" : "600",
        "caption" : "场景4"
      },
      "layout" : {
        "type" : "Anchor",
        "padding" : "2"
      },
      "nodes" : [ {
        "rule" : "Dialog/Wrapper.Children",
        "nodes" : [ {
          "rule" : "HtmlContainer",
          "attrs" : {
            "style" : "${argument.layoutRegion}",
            "height" : "30%",
            "content" : "权重30%) top:0; left:0; right:0"
          },
          "position" : {
            "heightOffset" : "-40",
            "left" : "0",
            "right" : "0",
            "top" : "0"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "style" : "${argument.layoutRegion}",
            "height" : "40",
            "content" : "固定高度) top:0; anchorTop:previous; left:0; right:0"
          },
          "position" : {
            "anchorTop" : "previous",
            "left" : "0",
            "right" : "0",
            "top" : "0"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "style" : "${argument.layoutRegion}",
            "height" : "40%",
            "content" : "权重40%) top:0; anchorTop:previous; left:0; right:0"
          },
          "position" : {
            "anchorTop" : "previous",
            "left" : "0",
            "right" : "0",
            "top" : "0"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "style" : "${argument.layoutRegion}",
            "height" : "40",
            "content" : "固定高度) top:0; anchorTop:previous; left:0; right:0"
          },
          "position" : {
            "anchorTop" : "previous",
            "left" : "0",
            "right" : "0",
            "top" : "0"
          }
        }, {
          "rule" : "HtmlContainer",
          "attrs" : {
            "style" : "${argument.layoutRegion}",
            "content" : "权重30%) top:0; bottom:0; left:0; right:0"
          },
          "position" : {
            "bottom" : "0",
            "anchorTop" : "previous",
            "left" : "0",
            "right" : "0",
            "top" : "0"
          }
        } ]
      } ]
    } ]
  } ]
}