<?xml version="1.0" encoding="UTF-8"?>
<project name="build" default="build">
	<property name="dist" value="./" />
	<property name="src" value="./" />
	<target name="build">
		<concat destfile="${dist}/chart.js" fixlastline="true" encoding="utf-8">
			<filelist dir="${src}/scripts/dorado">
				<file name="chart.js" />
				<file name="model.js" />
				<file name="binding.js" />
				<file name="axis.js" />
				<file name="element.js" />
			</filelist>
		</concat>

		<copy todir="${dist}/skins">
			<fileset dir="${src}/skins" />
		</copy>

		<copy todir="${dist}/resources">
			<fileset dir="${src}/resources" />
		</copy>
	</target>
</project>
