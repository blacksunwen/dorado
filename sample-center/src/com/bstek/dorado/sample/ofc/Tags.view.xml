<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="columnData">
      <PropertyDef name="value"/>
    </DataType>
    <DataType name="tagsData">
      <PropertyDef name="x"/>
      <PropertyDef name="y"/>
      <PropertyDef name="backgroundColor"/>
      <PropertyDef name="color"/>
      <PropertyDef name="axis"/>
      <PropertyDef name="alignX"/>
      <PropertyDef name="alignY"/>
      <PropertyDef name="padX"/>
      <PropertyDef name="padY"/>
      <PropertyDef name="font"/>
      <PropertyDef name="bold"/>
      <PropertyDef name="rotate"/>
      <PropertyDef name="text"/>
      <PropertyDef name="fontSize"/>
      <PropertyDef name="border"/>
      <PropertyDef name="underline"/>
      <PropertyDef name="alpha"/>
    </DataType>
  </Model>
  <View>
    <DataSet id="dsColumn">
      <Property name="dataType">[columnData]</Property>
      <Property name="dataProvider">tagsDataProvider#getColumnData</Property>
    </DataSet>
    <DataSet id="dsTags">
      <Property name="dataProvider">tagsDataProvider#getTagsData</Property>
      <Property name="dataType">[tagsData]</Property>
    </DataSet>
    <OpenFlashChart id="openFlashChart1">
      <Property name="title">
        <Property name="text">Sales by Month 2006</Property>
        <Property name="style">font-size: 16px; font-weight: bold; font-family: Verdana; color:#ff9900; text-align: center;</Property>
      </Property>
      <Elements>
        <Column>
          <Property name="dataSet">dsColumn</Property>
          <Property name="bindingConfig">
            <Property name="valueProperty">value</Property>
          </Property>
        </Column>
        <Tags>
          <Property name="dataSet">dsTags</Property>
          <Property name="bindingConfig">
            <Property name="alignXProperty">alignX</Property>
            <Property name="alignYProperty">alignY</Property>
            <Property name="alphaProperty">alpha</Property>
            <Property name="axisProperty">axis</Property>
            <Property name="backgroundColorProperty">backgroundColor</Property>
            <Property name="boldProperty">bold</Property>
            <Property name="borderProperty">border</Property>
            <Property name="colorProperty">color</Property>
            <Property name="fontProperty">font</Property>
            <Property name="fontSizeProperty">fontSize</Property>
            <Property name="padXProperty">padX</Property>
            <Property name="padYProperty">padY</Property>
            <Property name="rotateProperty">rotate</Property>
            <Property name="textProperty">text</Property>
            <Property name="underlineProperty">underline</Property>
            <Property name="xProperty">x</Property>
            <Property name="yProperty">y</Property>
          </Property>
          <Property name="text">$#y#</Property>
          <Property name="alignX">center</Property>
        </Tags>
      </Elements>
      <XAxis>
        <Property name="color">#d000d0</Property>
        <Property name="gridColor">#00ff00</Property>
        <Property name="tickHeight">10</Property>
        <Property name="stroke">1</Property>
        <Property name="labelsShortcut">January,February,March,April,May,June,July,August,September</Property>
      </XAxis>
      <YAxis>
        <Property name="tickHeight">3</Property>
        <Property name="color">#d000d0</Property>
        <Property name="gridColor">#00ff00</Property>
        <Property name="max">20</Property>
        <Property name="offset">0</Property>
        <Property name="steps">4</Property>
      </YAxis>
      <YAxisRight>
        <Property name="stroke">4</Property>
        <Property name="tickHeight">3</Property>
        <Property name="color">#d000d0</Property>
        <Property name="gridColor">#00ff00</Property>
        <Property name="steps">20</Property>
        <Property name="max">100</Property>
      </YAxisRight>
    </OpenFlashChart>
  </View>
</ViewConfig>
