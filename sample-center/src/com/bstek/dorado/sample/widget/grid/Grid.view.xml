<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model/>
  <View layout="anchor padding:30">
    <Property name="title">Grid</Property>
    <Button>
      <ClientEvent name="onClick">var grid = this.id(&quot;gridPhones&quot;);&#xD;
$ajax.request(&quot;>dorado/res/com/bstek/dorado/sample/widget/grid/Phones.js&quot;, function(result) {&#xD;
	grid.set(&quot;items&quot;, result.getJsonData());&#xD;
});</ClientEvent>
      <Property name="caption">Load grid data via Ajax ...</Property>
    </Button>
    <Grid id="gridPhones" layoutConstraint="top:40">
      <Property name="height">500</Property>
      <Property name="width">800</Property>
      <Property name="showFooter">true</Property>
      <Property name="showGroupFooter">true</Property>
      <Property name="dynaRowHeight">true</Property>
      <IndicatorColumn/>
      <RowNumColumn/>
      <DataColumn>
        <Property name="property">product</Property>
        <Property name="caption">Product</Property>
      </DataColumn>
      <DataColumn>
        <Property name="caption">Manufacturer</Property>
        <Property name="property">manufacturer</Property>
        <Property name="width">100</Property>
      </DataColumn>
      <ColumnGroup>
        <Property name="caption">Volumn</Property>
        <DataColumn>
          <Property name="property">length</Property>
          <Property name="caption">Length</Property>
          <Property name="width">50</Property>
          <Property name="summaryType">average</Property>
          <Property name="dataType">float</Property>
          <Property name="displayFormat">#.##</Property>
        </DataColumn>
        <DataColumn>
          <Property name="property">width</Property>
          <Property name="caption">Width</Property>
          <Property name="width">50</Property>
          <Property name="summaryType">average</Property>
          <Property name="dataType">float</Property>
          <Property name="displayFormat">#.##</Property>
        </DataColumn>
        <DataColumn>
          <Property name="property">height</Property>
          <Property name="caption">Height</Property>
          <Property name="width">50</Property>
          <Property name="summaryType">average</Property>
          <Property name="dataType">float</Property>
          <Property name="displayFormat">#.##</Property>
        </DataColumn>
      </ColumnGroup>
      <DataColumn>
        <Property name="property">price</Property>
        <Property name="caption">Price</Property>
        <Property name="summaryType">average</Property>
        <Property name="displayFormat">#,##0.00</Property>
        <Property name="dataType">float</Property>
      </DataColumn>
      <DataColumn>
        <Property name="property">comment</Property>
        <Property name="caption">Comment</Property>
        <Property name="width">*</Property>
        <Property name="wrappable">true</Property>
      </DataColumn>
    </Grid>
  </View>
</ViewConfig>
