<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
	<View title="DataSetDropDown 1" style="margin:30px">
		<DataSet id="dsOrders" dataProvider="orderInterceptor#getAll"
			pageSize="5">
			<DataType parent="[Order]">
				<PropertyDef name="customer" dataType="BaseCustomer" />
			</DataType>
		</DataSet>
		<DataSet id="dsCustomers" dataType="[BaseCustomer]"
			dataProvider="customerInterceptor#findCustomersByCompanyName" />

		<DataSetDropDown id="ddCustomers" dataSet="dsCustomers"
			dynaFilter="true" />
		<FieldSet caption="合同信息" width="600" height="200" layout="padding:16">
			<Children>
				<AutoForm dataSet="dsOrders" cols="*">
					<AutoFormElement property="customer" trigger="ddCustomers" />
					<AutoFormElement property="orderDate" />
					<AutoFormElement property="shipName" />
					<AutoFormElement property="shipAddress" />
					<AutoFormElement property="shipCity" />
				</AutoForm>
			</Children>
		</FieldSet>
	</View>
</ViewConfig>