<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Model>
    <DataType name="Employee" parent="global:Employee">
      <PropertyDef name="titleOfCourtesy">
        <Property name="mapping">
          <Property name="mapValues">${dorado.getDataProvider(&quot;employeeInterceptor#getTitlesOfCourtesy&quot;).getResult()}</Property>
        </Property>
      </PropertyDef>
    </DataType>
  </Model>
  <View title="Employee Maintain">
    <DataSet id="dsEmployees" dataProvider="employeeInterceptor#getAll" dataType="[Employee]"/>
    <DataGrid dataSet="dsEmployees" stretchColumnsMode="stretchableColumns">
      <DataColumn property="firstName"/>
      <DataColumn property="lastName"/>
      <DataColumn property="sex"/>
      <DataColumn property="titleOfCourtesy" width="120"/>
    </DataGrid>
  </View>
</ViewConfig>
