<?xml version="1.0" encoding="UTF-8"?>
<project name="build" default="build">
	<target name="build">
		<concat destfile="${dist}/scripts/dorado/html-editor.js" fixlastline="true" encoding="utf-8">
			<filelist dir="${src}/scripts/dorado">
                <file name="ueditor_all.js" />
                <file name="color-picker.js" />
                <file name="face-picker.js" />
                <file name="html-editor.js" />
                <file name="html-editor-plugins.js" />
			</filelist>
		</concat>

		<copy todir="${dist}/skins">
			<fileset dir="${src}/skins" />
		</copy>

		<copy todir="${dist}/resources">
			<fileset dir="${src}/resources" />
		</copy>
	</target>
</project>
