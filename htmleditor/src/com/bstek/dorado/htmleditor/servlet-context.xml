<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:d="http://www.bstek.com/dorado/schema"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.bstek.com/dorado/schema http://www.bstek.com/dorado/schema/spring-dorado-7.0.xsd">
	<bean parent="dorado.resolverRegister">
		<property name="url" value="/dorado/htmleditor/imageupload" />
		<property name="resolver">
			<bean class="com.bstek.dorado.htmleditor.DefaultUploadResolver">
				<property name="saveFolderName" value="htmleditorimage" />
				<property name="allowedExtensions" value="jpg|gif|jpeg|png|bmp" />
			</bean>
		</property>
	</bean>
	
	<bean parent="dorado.resolverRegister">
		<property name="url" value="/dorado/htmleditor/fileupload" />
		<property name="resolver">
			<bean class="com.bstek.dorado.htmleditor.DefaultUploadResolver">
				<property name="saveFolderName" value="htmleditorfile" />
				<property name="deniedExtensions" value="php|php2|php3|php4|php5|phtml|pwml|inc|asp|aspx|ascx|jsp|cfm|cfc|pl|bat|exe|com|dll|vbs|js|reg|cgi" />
			</bean>
		</property>
	</bean>
	
	<bean parent="dorado.resolverRegister">
		<property name="url" value="/dorado/htmleditor/flashupload" />
		<property name="resolver">
			<bean class="com.bstek.dorado.htmleditor.DefaultUploadResolver">
				<property name="saveFolderName" value="htmleditorflash" />
				<property name="allowedExtensions" value="swf|fla" />
			</bean>
		</property>
	</bean>
</beans>
