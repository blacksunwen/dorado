<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:d="http://www.bstek.com/dorado/schema"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.bstek.com/dorado/schema http://www.bstek.com/dorado/schema/spring-dorado-7.0.xsd">
	<import resource="common-context.xml" />

	<bean id="dorado.idesupport.propertyDefRuleTemplateInitializer"
		class="com.bstek.dorado.idesupport.initializer.PropertyDefRuleTemplateInitializer">
		<property name="xmlParserAnnotationHelper" ref="dorado.xmlParserAnnotationHelper" />
	</bean>
	<bean id="dorado.idesupport.ruleTemplateBuilder" class="com.bstek.dorado.idesupport.RuleTemplateBuilder">
		<property name="initializerMap">
			<map>
				<entry key="*">
					<bean
						class="com.bstek.dorado.idesupport.initializer.CommonRuleTemplateInitializer">
						<property name="xmlParserAnnotationHelper" ref="dorado.xmlParserAnnotationHelper" />
					</bean>
				</entry>
				<entry key="Model">
					<bean
						class="com.bstek.dorado.idesupport.initializer.ModelRuleTemplateInitializer" />
				</entry>
				<entry key="DataType">
					<bean
						class="com.bstek.dorado.idesupport.initializer.DataTypeRuleTemplateInitializer">
						<property name="xmlParserAnnotationHelper" ref="dorado.xmlParserAnnotationHelper" />
					</bean>
				</entry>
				<entry key="PropertyDef"
					value-ref="dorado.idesupport.propertyDefRuleTemplateInitializer" />
				<entry key="Reference"
					value-ref="dorado.idesupport.propertyDefRuleTemplateInitializer" />
				<entry key="Lookup"
					value-ref="dorado.idesupport.propertyDefRuleTemplateInitializer" />
				<entry key="ViewConfig">
					<bean
						class="com.bstek.dorado.idesupport.initializer.ViewConfigRuleTemplateInitializer" />
				</entry>
			</map>
		</property>
		<property name="xmlDocumentBuilder" ref="dorado.xmlDocumentBuilder" />
		<property name="preloadParser">
			<bean class="com.bstek.dorado.idesupport.parse.PreloadParser" />
		</property>
		<property name="ruleTemplateParser" ref="dorado.idesupport.ruleTemplateParser" />
		<property name="configTemplateFiles">
			<list>
				<value>com/bstek/dorado/idesupport/base-config-rules.xml</value>
				<value>com/bstek/dorado/idesupport/data-config-rules.xml</value>
				<value>com/bstek/dorado/idesupport/view-config-rules.xml</value>
				<value>com/bstek/dorado/idesupport/user-config-rules.xml</value>
			</list>
		</property>
	</bean>
	<bean id="dorado.idesupport.ruleConfigLoader" abstract="true"
		class="com.bstek.dorado.idesupport.RuleConfigLoader">
		<property name="ruleTemplateBuilder" ref="dorado.idesupport.ruleTemplateBuilder" />
	</bean>

	<bean id="dorado.idesupport.ruleSetOutputter" class="com.bstek.dorado.idesupport.output.RuleSetOutputter" />
</beans>