<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" default="build">
	<property name="project.root" value="${workspace.dir}/sample-center" />
	<property name="module.dir" value="${work.dir}/sample-center" />
	<available property="ivy-presented" file="${workspace.dir}/sample-center/ivy.xml" />

	<taskdef resource="org/apache/ivy/ant/antlib.xml" uri="antlib:org.apache.ivy.ant">
		<classpath>
			<pathelement location="${lib.dir}/${ivy.jar}" />
			<pathelement location="${lib.dir}/${oro.jar}" />
		</classpath>
	</taskdef>

	<target name="clean">
		<delete dir="${module.dir}" />

		<mkdir dir="${module.dir}/src" />
		<mkdir dir="${module.dir}/bin" />
		<mkdir dir="${module.dir}/lib" />
		<mkdir dir="${module.dir}/db" />
		<mkdir dir="${module.dir}/web/WEB-INF/classes" />
		<mkdir dir="${module.dir}/web/WEB-INF/lib" />
	</target>

	<target name="prepare-dependencies">
		<ivy:configure file="${work.dir}/ivysettings.xml" />
		<ivy:resolve file="${project.root}/ivy.xml" />
		<ivy:retrieve pattern="${module.dir}/lib/[artifact]-[revision](-[classifier]).[ext]" conf="compile" />
		<copy todir="${module.dir}/lib">
			<fileset dir="${target.lib.dir}">
				<include name="*.jar" />
			</fileset>
		</copy>
	</target>

	<target name="prepare-work-dir" depends="clean,prepare-dependencies">
		<echo message="copy ${project.root}/src --> ${module.dir}/src" />
		<copy todir="${module.dir}/src">
			<fileset dir="${project.root}/src" excludes="**/test/**" />
		</copy>

		<echo message="copy ${project.root}/db --> ${module.dir}/db" />
		<copy todir="${module.dir}/db" file="${project.root}/db/demo-data.h2.db" />

		<echo message="copy ${project.root}/web --> ${module.dir}/web" />
		<copy todir="${module.dir}/web">
			<fileset dir="${project.root}/web">
				<exclude name="WEB-INF/classes/**" />
				<exclude name="WEB-INF/lib/**" />
			</fileset>
		</copy>

		<ivy:retrieve pattern="${module.dir}/web/WEB-INF/lib/[artifact]-[revision](-[classifier]).[ext]" conf="runtime" />
		<copy todir="${module.dir}/web/WEB-INF/lib">
			<fileset dir="${target.lib.dir}">
				<include name="*.jar" />
			</fileset>
		</copy>
	</target>

	<target name="compile" depends="prepare-work-dir">
		<path id="classpath">
			<fileset dir="${module.dir}/lib" includes="*.jar" />
		</path>
		<javac classpathref="classpath" srcdir="${module.dir}/src" destdir="${module.dir}/bin" debug="true" deprecation="true" nowarn="false" encoding="UTF-8" />
	</target>

	<target name="delete-provided-jar">
		<basename property="filename" file="${file}" />
		<delete file="${module.dir}/facet/web/WEB-INF/lib/${filename}" />
	</target>

	<target name="project-facet" depends="prepare-work-dir">
		<copy todir="${module.dir}/facet">
			<fileset dir="${module.dir}">
				<include name="db/**/*.*" />
				<include name="web/**/*.*" />
			</fileset>
		</copy>

		<copy todir="${module.dir}/facet/source">
			<fileset dir="${module.dir}/src" />
		</copy>

		<copy todir="${module.dir}/facet" overwrite="true">
			<fileset dir="${resources.dir}/sample-center/facet" />
		</copy>
		<foreach target="delete-provided-jar" param="file" inheritall="true">
			<path>
				<fileset dir="${work.dir}/lib">
					<include name="*.jar" />
					<exclude name="jta-*.jar" />
				</fileset>
				<fileset dir="${target.lib.dir}" includes="*.jar" />
			</path>
		</foreach>
	</target>

	<target name="bsdn-war" depends="compile">
		<copy todir="${module.dir}/bsdn-war">
			<fileset dir="${module.dir}/web">
				<exclude name="WEB-INF/lib/servlet-api-*.jar" />
				<exclude name="WEB-INF/lib/jsp-api-*.jar" />
				<exclude name="WEB-INF/lib/xml-apis-*.jar" />
			</fileset>
		</copy>
		<copy todir="${module.dir}/bsdn-war/WEB-INF/classes">
			<fileset dir="${module.dir}/src" />
			<fileset dir="${module.dir}/bin" />
		</copy>

		<delete>
			<fileset dir="${module.dir}/bsdn-war/WEB-INF/dorado-home" includes="*.properties" />
		</delete>
		<copy todir="${module.dir}/bsdn-war" overwrite="true">
			<fileset dir="${resources.dir}/sample-center/bsdn-war" />
		</copy>

		<war destfile="${module.dir}/sample-center.war" compress="true" level="9">
			<fileset dir="${module.dir}/bsdn-war">
				<include name="**/*.*" />
			</fileset>
		</war>
	</target>

	<target name="build" depends="project-facet,bsdn-war" />
</project>
