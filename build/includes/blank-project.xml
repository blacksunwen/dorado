<?xml version="1.0" encoding="UTF-8"?>
<project default="build">
	<property name="workDir" value="${rootWorkDir}/blank" />
	<property name="templateDir" value="${workspaceDir}/blank" />

	<target name="clean">
		<delete dir="${workDir}" />
	</target>

	<target name="build" depends="clean">
		<mkdir dir="${workDir}" />

		<copy todir="${workDir}">
			<fileset dir="resources/blank-project" />
		</copy>

		<copy todir="${workDir}/web/WEB-INF/lib">
			<fileset dir="${workDir}/lib">
				<include name="*.jar" />
				<exclude name="dorado-*.jar" />
			</fileset>
			<fileset dir="${target.lib.dir}">
				<include name="dorado-core-*.jar" />
				<include name="dorado-console-*.jar" />
				<include name="dorado-ide-support-*.jar" />
			</fileset>
		</copy>
		<delete>
			<fileset dir="${module.dir}/web/WEB-INF/lib">
				<include name="servlet-api-*.jar" />
				<include name="jsp-api-*.jar" />
				<include name="xml-apis-*.jar" />
			</fileset>
		</delete>
	</target>
</project>
